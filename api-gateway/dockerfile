# Multi-stage build for api-gateway
FROM node:20-alpine3.18 AS builder

# Set working directory
WORKDIR /app

# Copy shared folder first
COPY shared ./shared

# Copy api-gateway package files
COPY api-gateway/package*.json ./api-gateway/

# Install dependencies for api-gateway
WORKDIR /app/api-gateway
RUN npm install

# Copy api-gateway source code
COPY api-gateway/tsconfig.json ./
COPY api-gateway/src ./src

# Build the application
RUN npm run build

# Production stage
FROM node:20-alpine3.18

# Create app user
RUN addgroup app && adduser -S -G app app

# Set working directory
WORKDIR /app

# Copy package files
COPY --chown=app:app api-gateway/package*.json ./

# Install only production dependencies
RUN npm install --only=production

# Copy built application from builder stage
COPY --chown=app:app --from=builder /app/api-gateway/dist ./dist

# Switch to app user
USER app

# Expose port
EXPOSE 8080

# Start the application
CMD ["npm", "start"]
